{
  "compilerOptions": {
    "outDir": "./dist/",

    "sourceMap": true,
    "noImplicitAny": true,

    "module": "es6",
    "target": "es5",

    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@styles/*": ["src/styles/*"],
      "@share/*": ["src/share/*"],
      "@logic/*": ["src/logic/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],

      "zzlist": ["node_modules/list/dist/index.js"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
